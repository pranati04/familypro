modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mongodb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Family Tree App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MongoDB"

[[workflows.workflow]]
name = "Family Tree App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd project && npm start"
waitForPort = 5000

[[workflows.workflow]]
name = "MongoDB"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mongod --dbpath /tmp/mongodb --port 27017 --bind_ip 127.0.0.1"

[[ports]]
localPort = 3001
externalPort = 3002
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 42331
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start:prod"]
